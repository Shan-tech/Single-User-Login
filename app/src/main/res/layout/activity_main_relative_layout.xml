<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/btnClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/submit"
        android:textSize="25sp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/textHelloWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70sp"
        android:layout_marginTop="28dp"
        android:padding="8dp"
        android:text="Hello World!"
        android:textColor="#0d47a2"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHelloWorld"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:text="@string/hi_admin"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imgDark"
        android:layout_width="291dp"
        android:layout_height="315dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/android" />

    <EditText
        android:id="@+id/etEnterSmthig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgDark"
        android:layout_marginTop="26dp"
        android:hint="@string/enter_something_here"
        android:maxLines="1" />
</RelativeLayout>